{
  "name": "tiles.data.gouv.fr",
  "version": "1.0.0",
  "description": "Fonds de carte de qualit√© utilisables par tous",
  "main": "index.js",
  "repository": "git@github.com:etalab/tiles.data.gouv.fr.git",
  "author": "tmerlier <tmerlier@student.42.fr>",
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "start": "NODE_ENV=production node server",
    "test": "NODE_ENV=test jest",
    "lint": "xo",
    "heroku-postbuild": "next build"
  },
  "dependencies": {
    "compression": "^1.7.2",
    "copy-to-clipboard": "^3.0.8",
    "express": "^4.16.2",
    "hoist-non-react-statics": "^2.5.4",
    "jest": "^22.4.3",
    "leaflet": "^1.3.1",
    "mapbox-gl": "^0.45.0",
    "next": "^5.1.0",
    "piwik-react-router": "^0.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-icons": "^2.2.7",
    "react-leaflet": "^1.9.1",
    "react-mapbox-gl": "^3.8.0",
    "react-test-renderer": "^16.3.2",
    "regenerator-runtime": "^0.11.1",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-plugin-inline-import": "^2.0.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-xo-react": "^0.14.0",
    "eslint-plugin-react": "^7.4.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "xo": "^0.18.2"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "semicolon": false,
    "space": 2,
    "envs": [
      "browser"
    ],
    "parser": "babel-eslint",
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "after-props"
      ],
      "react/jsx-closing-tag-location": "off",
      "react/jsx-first-prop-new-line": "off",
      "react/jsx-max-props-per-line": [
        "warn",
        {
          "maximum": 4,
          "when": "multiline"
        }
      ],
      "react/jsx-tag-spacing": [
        "error",
        {
          "closingSlash": "never",
          "beforeSelfClosing": "always",
          "afterOpening": "never"
        }
      ],
      "react/forbid-component-props": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-curly-brace-presence": "off",
      "react/require-default-props": "off",
      "react/jsx-no-bind": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "env": [
          "browser",
          "jest"
        ]
      }
    ]
  }
}
